<% include public/views/header.ejs %>

<div class="row">
	<div class="small-12 columns">
		<h2 id="title">Technology Work Order</h2>
	</div>
</div>
<br>
<div class="row">
    <div class="small-7 columns">
        <ul class="tabs" data-tabs id="wo-tabs">
            <li class="tabs-title is-active"><a href="#panel1" aria-selected="true">Entry/Update</a></li>
            <li class="tabs-title"><a href="#panel2">List</a></li>
        </ul>
    </div>
</div>
<div class="tabs-content" data-tabs-content="wo-tabs">
    <div class="tabs-panel is-active" id="panel1">
        <form id="theForm">
            <div class="row">
                <div class="small-2 columns">
                    <span class="label">Building</span>
                    <select name="building" id="building" required>
                        <option></option>
                        <option value="Central">Central</option>
                        <option value="Lincoln">Lincoln</option>
                        <option value="Ottawa">Ottawa</option>
                        <option value="Sheridan">Sheridan</option>
                        <option value="Montessori">Montessori</option>
                        <option value="PHS">PHS</option>
                        <option value="PMS">PMS</option>
                        <option value="Spitler">Spitler</option>
                        <option value="SFX">SFX</option>
                    </select>
                </div>
                <div class="small-2 columns">
                    <span class="label">Room #</span>
                    <input type="number" name="roomNumber" id="roomNumber" maxlength="3" required>
                </div>
                <div class="small-3 columns end">
                    <span class="label">Submitter</span>
                    <input type="text" name="submitter" id="submitter">
                </div>
            </div>
            <div class="row">
                <div class="small-7 columns end">
                    <span class="label">Description of problem</span>
                    <textarea name="problemDesc" id="problemDesc" rows="5" cols="30"></textarea>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="small-2 columns">
                    <i class="fa fa-caret-left expanded button" id="back"></i>
                </div>
                <div class="small-3 columns">
                    <i class="fa fa-star expanded button" id="newSubmission"></i>
                </div>
                <div class="small-2 columns end">
                    <i class="fa fa-caret-right expanded button" id="forward"></i>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="small-7 columns end">
                    <span class="large expanded button success" id="submit">SUBMIT</span>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="small-7 columns end">
                    <h4 id="result">&nbsp</h4>
                </div>
            </div>
            <div class="row">
                <div class="small-1 columns">
                    <span class="label">Completed</span>
                    <input type="checkbox" name="completed" id="completed">
                </div>
                <div class="small-2 columns">
                    <span class="label">Assignment:</span>
                    <select name="assigned" id="assigned">
                        <option></option>
                        <option value="cody">Cody</option>
                        <option value="ben">Ben</option>
                        <option value="hb">Howard</option>
                    </select>
                </div>
                <div class="small-4 columns end">
                    <span class="label">Status</span>
                    <textarea name="status" id="status" rows="1"></textarea>
                </div>
            </div>
            <input type="hidden" name="id" id="id">
            <input type="hidden" name="date" id="date">
        </form>
    </div>
    <div class="tabs-panel" id="panel2">
        <% include public/views/list.ejs %>
    </div>
</div>

<!-- SCRIPTS -->
<script src="public/javascripts/libraries/jquery-2.2.3.min.js"></script>
<script src="public/javascripts/libraries/foundation.min.js"></script>
<script src="public/javascripts/bundle.js"></script>
